{
	"compilerOptions": {
		"target": "ES2022",
		"outDir": "./dist",
		"rootDir": "./",
		"module": "CommonJS",
		"declaration": true,
		"declarationMap": true,
		"sourceMap": true,
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"moduleResolution": "node",
		"allowJs": true,
		"checkJs": false,
		"resolveJsonModule": true
	},
	"include": [
		"src/**/*"
	],
	"exclude": [
		"node_modules",
		"dist",
		"js-sdk-legacy",
		"**/*.test.ts",
		"**/*.spec.ts"
	]
}